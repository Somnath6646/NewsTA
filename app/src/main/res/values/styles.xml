<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/bg_color</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="materialAlertDialogTheme">@style/Theme.MaterialComponents.Light.Dialog.Alert
        </item>
        <item name="navigationIconTint">@color/colorWhite</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Cardviewripple" parent="CardView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="thumbRadius">1dp</item>
    </style>

    <style name="DescriptionText">
        <item name="fontFamily">@font/semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Loginbuttontextstyle">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#003459</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Ctabuttontextstyle">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Ctabutton" parent="Cardviewripple">
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="android:disabledAlpha">0.5</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">30dp</item>
    </style>

    <style name="Ctabutton2" parent="Cardviewripple">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="android:disabledAlpha">0.5</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">30dp</item>

    </style>

    <style name="Rippleeffect">
        <item name="fontFamily">@font/regular</item>
        <item name="android:padding">6dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


    <style name="TextFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">

        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@null</item>
        <item name="boxBackgroundColor">@color/colorSecondary</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="BigHeading" parent="BlackBoldText">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="DetailPageHeading" parent="BlackBoldText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DetailPageSummary" parent="ExtraLightTextNews">
        <item name="android:textSize">17sp</item>
        <item name="lineSpacing">36sp</item>
    </style>

    <style name="NewsAdapterText">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SourceAdapterText">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BlackBoldText">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="BlackBoldTextNews">
        <item name="fontFamily">@font/semibold</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="ExtraLightTextNews">
        <item name="fontFamily">@font/soucesansproregular</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="TimelineTime">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PasswordFieldStyle" parent="TextFieldStyle">

        <item name="endIconMode">password_toggle</item>
    </style>

    <style name="TextActionBar">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="NavigationDrawerTextStyle">
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SettingsItemText">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <string name="hint_password">Password</string>

</resources>
