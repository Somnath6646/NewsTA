<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/signupSigninOptionsFragment"
        android:name="com.newsta.android.ui.authentication.AuthenticationOptionsFragment"
        android:label="SignupSigninOptionsFragment" >
        <action
            android:id="@+id/action_signupSigninOptionsFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/in_from_right"
            app:exitAnim="@anim/out_to_left"
            app:popEnterAnim="@anim/in_from_left"
            app:popExitAnim="@anim/out_to_right"/>
        <action
            android:id="@+id/action_signupSigninOptionsFragment_to_signinFragment"
            app:destination="@id/signinFragment"
            app:enterAnim="@anim/in_from_right"
            app:exitAnim="@anim/out_to_left"
            app:popEnterAnim="@anim/in_from_left"
            app:popExitAnim="@anim/out_to_right"/>
        <action
            android:id="@+id/action_signupSigninOptionsFragment_to_email_SignUpFragment"
            app:destination="@id/email_SignUpFragment"
            app:enterAnim="@anim/in_from_right"
            app:exitAnim="@anim/out_to_left"
            app:popEnterAnim="@anim/in_from_left"
            app:popExitAnim="@anim/out_to_right"/>
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.newsta.android.ui.authentication.SignUpFragment"
        android:label="SignUpFragment" />
    <fragment
        android:id="@+id/signinFragment"
        android:name="com.newsta.android.ui.authentication.SigninFragment"
        android:label="SigninFragment"
        />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.newsta.android.ui.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_signupSigninOptionsFragment"
            app:destination="@id/signupSigninOptionsFragment"
            app:enterAnim="@anim/fade_in"
            app:popEnterAnim="@anim/fade_in"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/email_SignUpFragment"
        android:name="com.newsta.android.ui.authentication.Email_SignUpFragment"
        android:label="fragment_email__sign_up"
        tools:layout="@layout/fragment_email__sign_up" >
        <action
            android:id="@+id/action_email_SignUpFragment_to_password_SignUpFragment"
            app:destination="@id/password_SignUpFragment"
            app:enterAnim="@anim/in_from_right"
            app:exitAnim="@anim/out_to_left"
            app:popEnterAnim="@anim/in_from_left"
            app:popExitAnim="@anim/out_to_right"/>
    </fragment>
    <fragment
        android:id="@+id/password_SignUpFragment"
        android:name="com.newsta.android.ui.authentication.Password_SignUpFragment"
        android:label="Password_SignUpFragment" />
</navigation>