<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/bg_color</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="materialAlertDialogTheme">@style/Theme.MaterialComponents.DayNight.Dialog.Alert</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:navigationBarColor">@color/bg_color</item>
        <item name="navigationIconTint">@color/colorWhite</item>
    </style>

    <style name="Cardviewripple" parent="CardView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="DescriptionText">
        <item name="fontFamily">@font/semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#605F5F</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="Loginbuttontextstyle">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#003459</item>
        <item name="android:textAlignment">center</item>
    </style>



    <style name="signinbuttontextstyle">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="TextFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox" >

        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@null</item>
        <item name="boxBackgroundColor">@color/colorSecondary</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="BigHeading">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="PasswordFieldStyle" parent="TextFieldStyle" >

        <item name="endIconMode">password_toggle</item>
    </style>


    <style name="TextActionBar">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>





    <string name="hint_password">Password</string>


</resources>