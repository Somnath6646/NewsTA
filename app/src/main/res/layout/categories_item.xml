<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/reorder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_reorder"
            app:layout_constraintBottom_toBottomOf="@id/switch_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/switch_category"
            android:layout_marginLeft="4dp" />

        <TextView
            android:id="@+id/text_view_category"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/semibold"
            android:text="Category"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            android:layout_marginLeft="16dp"
            app:layout_constraintBottom_toBottomOf="@id/switch_category"
            app:layout_constraintStart_toEndOf="@id/switch_category"
            app:layout_constraintTop_toTopOf="@id/switch_category" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.045dp"
            app:layout_constraintTop_toBottomOf="@id/text_view_category"
            android:layout_marginTop="1dp"
            android:background="@color/dividerColor" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
